{
  "private": false,
  "workspaces": ["packages/*", "apps/*"],
  "version": "0.0.0",
  "type": "module",
  "main": "./lib/litegraph.umd.js",
  "module": "./lib/litegraph.esm.js",
  "exports": {
    ".": {
      "import": "./dist/litegraph.esm.js",
      "require": "./dist/litegraph.umd.js"
    }
  },
  "scripts": {
    "lib": "rollup -c rollup.config.js",
    "format": "prettier --write src/**/*.{js,ts,css,scss}",
    "demo:dev": "vite --host",
    "demo:build": "tsc &&  vite build",
    "demo:preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "zip": "node scripts/compress.js",
    "remove": "npm run remove:dist && npm run remove:module",
    "remove:dist": "rm -rf packages/**/dist",
    "remove:module": "rm -rf packages/**/node_modules"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "rollup": "^4.24.3",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.54.4",
    "typescript": "^4.4.4",
    "vite": "^5.4.10",
    "vitepress": "^1.4.3"
  }
}
